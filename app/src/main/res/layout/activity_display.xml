<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.fitness.display"
    android:background="@drawable/background2">

    <Button
        android:text="Daily Routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt2"
        android:onClick="onButtonClick"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bt4"
        android:gravity="center" />

    <Button
        android:text="BMI Calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/bt3"
        android:onClick="onButtonClick"
        android:layout_below="@+id/bt4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bt5"
        android:gravity="center" />

    <Button
        android:text="Stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/bt4"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/bt2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bt3"
        android:gravity="center" />

    <Button
        android:text="WEIGHT MANAGEMENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/bt5"
        android:onClick="onButtonClick"
        android:layout_below="@+id/bt3"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <Button
        android:text="step counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt6"
        android:onClick="onButtonClick"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bt5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bt5"
        android:gravity="center" />

</RelativeLayout>
