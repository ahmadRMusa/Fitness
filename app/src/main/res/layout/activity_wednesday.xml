<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wednesday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.fitness.wednesday"
    android:background="@drawable/background2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/test4"
        android:id="@+id/imageView15"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="378dp" />

    <TextView
        android:text="1. Deadlift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_light"
        android:fontFamily="casual"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <Button
        android:text="Demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/btdemo7"
        android:onClick="onButtonClick"/>

    <TextView
        android:text="2. Dumbell press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@android:color/background_light"
        android:fontFamily="casual"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btdemo7" />

    <Button
        android:text="demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:id="@+id/btdemo8"
        android:onClick="onButtonClick"/>

    <TextView
        android:text="3. Seated cable row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="@android:color/background_light"
        android:fontFamily="casual"
        android:textSize="25dp"
        android:layout_below="@+id/btdemo8"
        android:layout_alignStart="@+id/btdemo8"
        android:layout_marginTop="21dp" />

    <Button
        android:text="demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignEnd="@+id/btdemo8"
        android:id="@+id/btdemo9"
        android:onClick="onButtonClick"/>
</RelativeLayout>
